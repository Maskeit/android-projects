<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/operacion"
        android:textAlignment="textEnd"
        android:textSize="30sp"
        android:text="0"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal|numberSigned"
        android:id="@+id/numero"
        android:textSize="30sp"
        android:hint="0"
        android:layout_below="@id/operacion"
        android:textAlignment="textEnd"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/botones0"
        android:layout_below="@id/numero">

        <Button
            android:id="@+id/tborrar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:backgroundTint="#566A7A"
            android:text="C"
            android:textSize="22sp" />

        <Button
            android:id="@+id/tborrartodo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#566A7A"

            android:text="CE"
            android:textSize="22sp" />

        <Button
            android:id="@+id/traiz"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#7893AA"
            android:text="sqrt"
            android:textSize="18sp" />

        <Button
            android:id="@+id/tpotencia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#7893AA"
            android:text="x^y"
            android:textSize="20sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/botones1"
        android:layout_below="@id/botones0">

        <Button
            android:id="@+id/t7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#9F00BCD4"

            android:text="7"
            android:textSize="22sp" />

        <Button
            android:id="@+id/t8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#9F00BCD4"

            android:text="8"
            android:textSize="22sp" />

        <Button
            android:id="@+id/t9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#9F00BCD4"

            android:text="9"
            android:textSize="22sp" />

        <Button
            android:id="@+id/tdividir"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#7893AA"

            android:text="/"
            android:textSize="22sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/botones2"
        android:layout_below="@id/botones1">

        <Button
            android:id="@+id/t4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#9F00BCD4"

            android:text="4"
            android:textSize="22sp" />

        <Button
            android:id="@+id/t5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#9F00BCD4"

            android:text="5"
            android:textSize="22sp" />

        <Button
            android:id="@+id/t6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#9F00BCD4"

            android:text="6"
            android:textSize="22sp" />

        <Button
            android:id="@+id/tmultiplicar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#7893AA"

            android:text="*"
            android:textSize="22sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/botones3"
        android:layout_below="@id/botones2">

        <Button
            android:id="@+id/t1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#9F00BCD4"

            android:text="1"
            android:textSize="22sp" />

        <Button
            android:id="@+id/t2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#9F00BCD4"

            android:text="2"
            android:textSize="22sp" />

        <Button
            android:id="@+id/t3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#9F00BCD4"

            android:text="3"
            android:textSize="22sp" />

        <Button
            android:id="@+id/trestar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#7893AA"

            android:text="-"
            android:textSize="22sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/botones4"
        android:layout_below="@id/botones3">

        <Button
            android:id="@+id/tpunto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#7893AA"

            android:text="."
            android:textSize="22sp" />

        <Button
            android:id="@+id/t0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#9F00BCD4"

            android:text="0"
            android:textSize="22sp" />

        <Button
            android:id="@+id/tigual"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#FF5722"

            android:text="="
            android:textSize="22sp" />

        <Button
            android:id="@+id/tsumar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#7893AA"
            android:text="+"
            android:textSize="22sp" />
    </LinearLayout>
    <Switch
        android:id="@+id/switchSci"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/botones4"
        android:text="Mostrar Botones Científicos" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/botonesSci1"
        android:layout_below="@id/switchSci"
        android:visibility="gone">
        <!-- Agrega aquí los botones científicos que deseas mostrar/ocultar -->
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/tlog"
            android:textSize="20sp"
            android:text="log"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/tln"
            android:textSize="20sp"
            android:text="ln"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/tfact"
            android:textSize="20sp"
            android:text="n!"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/tinverso"
            android:textSize="20sp"
            android:text="1/x"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/botonesSci2"
        android:layout_below="@id/botonesSci1"
        android:visibility="gone">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/tsin"
            android:textSize="20sp"
            android:text="sin"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/tcos"
            android:textSize="20sp"
            android:text="cos"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/ttan"
            android:textSize="20sp"
            android:text="tan"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/texp"
            android:textSize="16sp"
            android:text="10^x"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/botonesSci3"
        android:layout_below="@id/botonesSci2"
        android:visibility="gone">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/tabsolute"
            android:textSize="22sp"
            android:text="|X|"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/tpi"
            android:textSize="22sp"
            android:text="π"/>
        <Button
            android:id="@+id/tdiv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="DIV"
            android:textSize="20sp" />
        <Button
            android:id="@+id/tmod"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="MOD"
            android:textSize="20sp" />

    </LinearLayout>
</RelativeLayout>
